<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade" overwrite="true">
	<name>SobiPro</name>
	<creationDate>04 May 2018</creationDate>
	<author>Sigsiu.NET GmbH</author>
	<authorEmail>sobi[at]sigsiu.net</authorEmail>
	<authorUrl>https://www.Sigsiu.NET</authorUrl>
	<copyright>Copyright (C) 2006-2018 Sigsiu.NET GmbH</copyright>
	<license>GNU General Public License v3</license>
	<version>1.4.7.2</version>
	<codename>Owl</codename>
	<description>SobiPro directory component for Joomla!</description>
	<version_number>1.4.6</version_number>
	<SobiPro>
		<requirements>
			<core version="1.3" />
		</requirements>
	</SobiPro>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install3x.sql</file>
		</sql>
	</install>
	<scriptfile>spinstall.php</scriptfile>
	<files folder="Site">
		<folder>etc</folder>
		<folder>lib</folder>
		<folder>media</folder>
		<folder>opt</folder>
		<folder>tmp</folder>
		<folder>usr</folder>
		<folder>var</folder>
		<folder>views</folder>
		<filename>CHANGELOG.md</filename>
		<filename>README.md</filename>
		<filename>sobipro.php</filename>
		<filename>router.php</filename>
		<filename>metadata.xml</filename>
		<filename>gplv3.txt</filename>
		<filename>gplv3addterms.txt</filename>
		<filename>.htaccess</filename>
		<filename>Sobi.phar.tar.gz</filename>
	</files>
	<languages>
		<language tag="en-GB">Site/usr/locale/site/en-GB.com_sobipro.ini</language>
		<language tag="en-GB">Site/usr/locale/site/en-GB.com_sobipro.js.ini</language>
		<language tag="en-GB">Site/usr/locale/site/en-GB.com_sobipro.err.ini</language>
		<language tag="en-GB">Site/usr/locale/site/en-GB.SpApp.select-list.countries.ini</language>
	</languages>

	<media folder="Site/media" destination="sobipro">
		<folder>css</folder>
		<folder>images</folder>
		<folder>adm</folder>
		<folder>browser</folder>
		<folder>tree</folder>
		<folder>icons</folder>
		<filename>professionalsupport.png</filename>
		<filename>sigsiu.png</filename>
		<filename>SobiPro.png</filename>
		<filename>logo.png</filename>
		<filename>spc.png</filename>
	</media>

	<administration>
		<menu>COM_SOBIPRO</menu>
		<files folder="Admin">
			<folder>about</folder>
			<folder>acl</folder>
			<folder>category</folder>
			<folder>config</folder>
			<folder>entry</folder>
			<folder>extensions</folder>
			<folder>field</folder>
			<folder>front</folder>
			<folder>section</folder>
			<folder>template</folder>
			<folder>menu</folder>
			<filename>sobipro.php</filename>
			<filename>install3x.sql</filename>
			<filename>default.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
		</files>
		<languages>
			<language tag="en-GB">Site/usr/locale/adm/en-GB.com_sobipro.ini</language>
			<language tag="en-GB">Site/usr/locale/adm/en-GB.com_sobipro.js.ini</language>
			<language tag="en-GB">Site/usr/locale/adm/en-GB.com_sobipro.sys.ini</language>
			<language tag="en-GB">Site/usr/locale/adm/en-GB.com_sobipro.about.ini</language>
			<language tag="en-GB">Site/usr/locale/adm/en-GB.com_sobipro.messages.ini</language>
			<language tag="en-GB">Site/usr/locale/adm/en-GB.com_sobipro.check.ini</language>
            <language tag="en-GB">Site/usr/locale/adm/en-GB.SpTpl.default3.ini</language>
        </languages>
	</administration>
	<updateservers>
		<server type="extension" priority="1" name="SobiPro Updates">
			<![CDATA[https://xml.sigsiu.net/SobiPro/SobiPro.xml]]>
		</server>
	</updateservers>
</extension>
