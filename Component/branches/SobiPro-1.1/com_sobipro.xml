	<svn>$Revision$</svn>
	<SobiPro>
		<requirements>
			<core version="1.1" />
		</requirements>
	</SobiPro>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install16.sql</file>
		</sql>
	</install>
	<scriptfile>spinstall.php</scriptfile>
	<files folder="Site">
		<folder>etc</folder>
		<folder>lib</folder>
		<folder>media</folder>
		<folder>opt</folder>
		<folder>tmp</folder>
		<folder>usr</folder>
		<folder>var</folder>
		<folder>views</folder>
		<filename>sobipro.php</filename>
        <filename>router.php</filename>
		<filename>changelog.txt</filename>
		<filename>metadata.xml</filename>
		<filename>gplv3.txt</filename>
		<filename>gplv3addterms.txt</filename>
		<filename>.htaccess</filename>
	</files>
	<languages>
		<language tag="en-GB">Site/usr/locale/site/en-GB.com_sobipro.ini</language>
		<language tag="en-GB">Site/usr/locale/site/en-GB.com_sobipro.js.ini</language>
		<language tag="en-GB">Site/usr/locale/site/en-GB.com_sobipro.err.ini</language>
	</languages>

	<media folder="Site/media" destination="sobipro">
		<folder>css</folder>
		<folder>images</folder>
		<folder>adm</folder>
		<folder>browser</folder>
		<folder>tree</folder>
		<folder>styles</folder>
		<folder>progress</folder>
		<folder>icons</folder>
		<folder>32x32</folder>
		<filename>donate.png</filename>
