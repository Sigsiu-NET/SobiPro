<?xml version="1.0" encoding="utf-8"?>
<definition>
	<header>
		<title value="SEC.SITE_TITLE" />
		<file type="script" filename="bootstrap.tooltips" />
		<file type="script" filename="bootstrap.tabs" />
		<file type="script" filename="adm.front" />
	</header>
	<toolbar title="var:[site_title]" icon="SobiPro">
		<divider />
		<buttons type="actions">
			<button type="new" task="section.add" label="TB.ADD_NEW" ico="file" />
			<button type="delete" task="section.delete" />
			<nav-header label="TB.PUBLISHING" />
			<button type="publish" task="section.publish" />
			<button type="hide" task="section.hide" />
		</buttons>
		<divider />
		<buttons type="options" dropdown-class="pull-right">
			<button type="url" task="panel" />
			<button type="url" task="config" />
			<button type="url" task="acl" />
			<button type="url" task="extensions" />
            <button type="url" task="template.info" />
			<button type="help" target="_blank" />
		</buttons>
	</toolbar>
	<body>
		<message id="spMessage" />
        <div class="row-fluid">
			<div class="span6">

                <div class="well spStatus">
                    <div>
                        <p condition="system-state.messages.length" class="spStatusIssues">
                            <a href="#ReportedIssues" role="button" class="btn btn-warning" data-toggle="modal">
                                <text value="CPANEL_REPORTED_ISSUES">
                                    <param value="system-state.messages.length" parse="true" />
                                </text>
                            </a>
                        </p>
                        <p class="spStatusHeader">
                            <text value="CPANEL_SYSTEM_STATUS" />
                        </p>
                    </div>
                    <message parse="system-state.accelerator" dismiss-button="false" class="spStatusAlert" />
                    <message parse="system-state.javascript-cache" dismiss-button="false" class="spStatusAlert" />
                    <message parse="system-state.css-cache" dismiss-button="false" class="spStatusAlert" />
                    <message parse="system-state.display-errors" dismiss-button="false" class="spStatusAlert" />
                    <message parse="system-state.debug-level" dismiss-button="false" class="spStatusAlert" />
                    <message parse="system-state.debug-xml" dismiss-button="false" class="spStatusAlert" />
                    <div class="modal hide" id="ReportedIssues" condition="system-state.messages.length" >
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">
                                <text value="CLOSE_X" />
                            </button>
                            <h3>
                                <text value="CPANEL_REPORTED_ISSUES">
                                    <param value="system-state.messages.length" parse="true" />
                                </text>
                            </h3>
                        </div>
                        <div class="modal-body">
                            <table>
                                <head>
                                    <cell label="CPANEL_ISSUES_TYPE" type="text" />
                                    <cell label="CPANEL_ISSUES_SECTION" type="text" class="center" />
                                    <cell label="CPANEL_ISSUES_MESSAGE" type="text" />
                                </head>
                                <loop subject="system-state.messages">
                                    <cell type="text">
                                        <cell type="text" value="type-text" class="left label label-var:[type]" />
                                    </cell>
                                    <cell type="text" value="section.link" class="left" />
                                    <cell type="text" value="message" class="left" />
                                </loop>
                            </table>
                        </div>
                        <div class="modal-footer">
                            <a href="#" class="btn" data-dismiss="modal">
                                <text value="CLOSE" />
                            </a>
                        </div>
                    </div>
                </div>


				<header label="SECTIONS" icon="SobiCatList">
					<div class="btn-group pull-right" id="SectionFilterHead">
						<field type="select" name="order" selected="order" class="input-large spOrdering">
							<values>
								<values label="EMN_ORDER_BY" />
								<option value="name.asc" label="CATN.ORDER_BY_NAME_ASC" />
								<option value="name.desc" label="CATN.ORDER_BY_NAME_DESC" />
								<option value="state.asc" label="CATN.ORDER_BY_STATE_ASC" />
								<option value="state.desc" label="CATN.ORDER_BY_STATE_DESC" />
							</values>
						</field>
					</div>
				</header>
				<table>
					<head>
						<cell type="checkbox" rel="c_sid" class="center" />
						<cell label="SECTIONS.HEADER_ID" type="text" class="center" />
						<cell label="SECTIONS.HEADER_NAME" type="text" />
						<cell label="SECTION.STATE_HEAD" type="text" class="center" />
					</head>
					<loop subject="sections">
						<cell type="checkbox" name="c_sid" value="id" class="center" />
						<cell type="text" value="id" class="center" />
						<cell>
							<cell type="link" value="name">
								<url type="intern">
									<param name="sid" value="id" parse="true" />
								</url>
							</cell>
						</cell>
						<cell type="ticker" value="state" class="center" icons="{'0':'remove-sign','1':'ok'}" valid-since="validSince" valid-until="validUntil">
							<url type="intern">
								<param name="task" value="section.toggle.enabled" />
								<param name="sid" value="id" parse="true" />
							</url>
						</cell>
					</loop>
				</table>
				<tabs condition="show-entries">
					<tab label="CPANEL_POPULAR_ENTRIES">
						<table condition="entries.popular.length">
							<head>
								<cell label="ENTRY.HEADER_NAME" type="text" />
								<cell label="ENTRY.HEADER_COUNTER" type="text" class="center" />
								<cell label="ENTRY.HEADER_SECTION" type="text" />
							</head>
							<loop subject="entries.popular">
								<cell>
									<cell type="link" value="name">
										<url type="intern">
											<param name="task" value="entry.edit" parse="false" />
											<param name="sid" value="id" parse="true" />
										</url>
									</cell>
								</cell>
								<cell type="text" value="counter" class="center" />
								<cell>
									<cell type="link" value="properties.section.name">
										<url type="intern">
											<param name="sid" value="properties.section.id" parse="true" />
										</url>
									</cell>
								</cell>
							</loop>
						</table>
					</tab>
					<tab label="CPANEL_NEW_ENTRIES">
						<table condition="entries.latest.length">
							<head>
								<cell label="ENTRY.HEADER_NAME" type="text" />
								<cell label="ENTRY.HEADER_CREATED_AT" type="text" class="center" />
								<cell label="ENTRY.HEADER_SECTION" type="text" />
							</head>
							<loop subject="entries.latest">
								<cell>
									<cell type="link" value="name">
										<url type="intern">
											<param name="task" value="entry.edit" parse="false" />
											<param name="sid" value="id" parse="true" />
										</url>
									</cell>
								</cell>
								<cell type="text" value="createdTime" class="center" />
								<cell>
									<cell type="link" value="properties.section.name">
										<url type="intern">
											<param name="sid" value="properties.section.id" parse="true" />
										</url>
									</cell>
								</cell>
							</loop>
						</table>
					</tab>
					<tab label="CPANEL_AWAITING_APPROVAL">
						<table condition="entries.unapproved.length">
							<head>
								<cell label="ENTRY.HEADER_NAME" type="text" />
								<cell label="ENTRY.HEADER_CREATED_AT" type="text" class="center" />
								<cell label="ENTRY.HEADER_SECTION" type="text" />
							</head>
							<loop subject="entries.unapproved">
								<cell>
									<cell type="link" value="name">
										<url type="intern">
											<param name="task" value="entry.edit" parse="false" />
											<param name="sid" value="id" parse="true" />
										</url>
									</cell>
								</cell>
								<cell type="text" value="createdTime" class="center" />
								<cell>
									<cell type="link" value="properties.section.name">
										<url type="intern">
											<param name="sid" value="properties.section.id" parse="true" />
										</url>
									</cell>
								</cell>
							</loop>
						</table>
					</tab>
				</tabs>
			</div>


			<div class="span6">
                <ul class="thumbnails">
                    <li class="spBox">
                        <url type="intern" label="CPANEL.GCONF" image="../media/sobipro/48x48/folder-configuration.png">
                            <param name="task" value="config" />
                        </url>
                    </li>
                    <li class="spBox">
                        <url type="intern" label="CPANEL.ACL" image="../media/sobipro/48x48/sobipro-acl-edit.png">
                            <param name="task" value="acl" />
                        </url>
                    </li>
                    <li class="spBox">
                        <url type="intern" label="CPANEL.SAM" image="../media/sobipro/48x48/folder-application">
                            <param name="task" value="extensions" />
                        </url>
                    </li>
                    <li class="spBox">
                        <url type="intern" label="CPANEL.TMPL" image="../media/sobipro/48x48/folder-templates.png">
                            <param name="task" value="template.info" />
                            <param name="template" value="default" />
                        </url>
                    </li>
                </ul>

				<div class="accordion" id="SobiProPanel">
					<div class="accordion-group">
						<div class="accordion-heading">
							<a class="accordion-toggle" data-toggle="collapse" data-parent="#SobiProPanel" href="#collapseOne">
								<text value="ABOUT.ABOUT_PANE" />
							</a>
						</div>
						<div id="collapseOne" class="accordion-body collapse in">
							<div class="accordion-inner spPanelSobiPro">
                                <div style="  float: right; margin: 10px 0 0 10px;">
                                    <a href="http://www.Sigsiu.NET" target="_blank" title="Sigsiu.NET Software Development">
                                        <img src="../media/sobipro/sobipro-main.png" alt="Sigsiu.NET Software Development" />
                                    </a>
                                </div>
                                <div style="float: left; margin: 0 10px 0 0;">
                                    <a href="http://www.Sigsiu.NET" target="_blank" title="Sigsiu.NET Software Development">
                                        <img src="../media/sobipro/sobipro.png" alt="Sigsiu.NET Software Development" />
                                    </a>
                                </div>
								<p class="spText"><text value="ABOUT.SP_DESC" /></p>
								<p class="spText"><text value="ABOUT.DEVELOPED_AND_DESIGNED">
									<param>
										<![CDATA[<a href="http://sigrid.sigsiu.net" target="_blank" title="Sigrid Suski">Sigrid Suski</a>]]>
									</param>
									<param>
										<![CDATA[<a href="http://radek.sigsiu.net" target="_blank" title="Radek Suski">Radek Suski</a>]]>
									</param>
								</text></p>
								<h4 style="clear: both; margin-top: 25px;"><text value="ABOUT.SP_CLUB" /></h4>
								<p class=""><text value="ABOUT.SP_CLUB_DESC">
                                    <param>
                                        <![CDATA[<a href="http://SobiPro.Sigsiu.NET" target="_blank" >SobiPro Club</a>]]>
                                    </param>
                                </text></p>
								<ul>
									<li>
										<a href="https://forum.Sigsiu.NET" target="_blank">
											<text value="Sigsiu.NET Forum" />
										</a>
									</li>
									<li>
										<text value="ABOUT.SP_CLUB_WEB">
											<param>
												<![CDATA[<a href="http://SobiPro.Sigsiu.NET" target="_blank" >SobiPro Club</a>]]>
											</param>
										</text>
									</li>
								</ul>
								<a href="http://SobiPro.Sigsiu.NET" target="_blank" title="The SobiPro Club - Support, Documentation, Applications and much more .... ">
									<img src="../media/sobipro/join-the-club.png" alt="The SobiPro Club - Support, Documentation, Applications and much more .... " />
								</a>
							</div>
						</div>
					</div>
					<div class="accordion-group">
						<div class="accordion-heading">
							<a class="accordion-toggle" data-toggle="collapse" data-parent="#SobiProPanel" href="#SobiProUpdates">
								<text value="ABOUT.UPDATES_PANE" />
							</a>
						</div>
						<div id="SobiProUpdates" class="accordion-body collapse">
							<div class="accordion-inner">
								<text value="ABOUT.UD.YOU_ARE_USING">
									<param value="version" parse="true" />
								</text>
								<div id="SPVerUpd" class="spVersions" />
							</div>
						</div>
					</div>
					<div class="accordion-group">
						<div class="accordion-heading">
							<a class="accordion-toggle" data-toggle="collapse" data-parent="#SobiProPanel" href="#SobiProNewsPane" id="SobiProNews">
								<text value="news.title" parse="true" />
							</a>
						</div>
						<div id="SobiProNewsPane" class="accordion-body collapse">
							<div class="accordion-inner">
                                <div class="spNews">
                                <loop subject="news.feeds">
                                    <div>
                                    <cell type="link" value="title">
                                        <url type="extern" host="url" />
                                    </cell>
                                    <cell type="text" value="content" />
                                    </div>
                                </loop>
                                </div>
							</div>
						</div>
					</div>
					<div class="accordion-group">
						<div class="accordion-heading">
							<a class="accordion-toggle" data-toggle="collapse" data-parent="#SobiProPanel" href="#SobiProCreditsPane">
								<text value="ABOUT.CREDITS_PANE" />
							</a>
						</div>
						<div id="SobiProCreditsPane" class="accordion-body collapse">
							<div class="accordion-inner">
								<file filename="about.credits" type="html" translatable="true" start-path="administrator" />
							</div>
						</div>
					</div>
					<div class="accordion-group">
						<div class="accordion-heading">
							<a class="accordion-toggle" data-toggle="collapse" data-parent="#SobiProPanel" href="#SobiProLicensePane">
								<text value="ABOUT.LICENSE_PANE" />
							</a>
						</div>
						<div id="SobiProLicensePane" class="accordion-body collapse">
							<div class="accordion-inner">
								<file filename="about.license" type="html" translatable="true" start-path="administrator" />
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
	<config>
		<action value="index.php" />
		<hidden>
			<field name="option" default="com_sobipro" />
			<field name="task" default="" />
		</hidden>
	</config>
</definition>
