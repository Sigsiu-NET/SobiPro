									<cell label="EXTENSIONS.HEADER_LICENSE" type="text" class="center" />
									<cell label="EXTENSIONS.HEADER_AVAILABILITY" type="text" class="left" />
								</head>
								<loop subject="extensions.languages">
									<cell class="left" >
										<cell>
											<tooltip>
												<attribute name="content" value="description" parse="true" />
												<attribute name="href" value="description-url" parse="true" />
												<attribute name="title" value="name" parse="true" />
											</tooltip>
										</cell>
									</cell>
									<cell type="text" value="version" class="center" />
									<cell type="ticker" value="installed" class="center" icons="{'-1':'check-empty','-2':'check','-3':'flag'}" status-text="{'-1':'EX.BRWOSE_NOT_INSTALLED_EXPL', '-2':'EX.BRWOSE_INSTALLED_EXPL', '-3':'EX.BRWOSE_INSTALLED_UPD_EXPL' }" />
									<cell>
										<button label="var:[action.text]" rel="var:[eid]" ico="none" class="var:[action.class] SpExtInstall"/>
									</cell>
									<cell type="text" value="author" class="center" />
									<cell type="text" value="license" class="center" />
									<cell class="left" condition="availability-link">
										<cell>
											<tooltip>
												<attribute name="content" value="availability-expl" parse="true" />
												<attribute name="href" value="availability-link" parse="true" />
												<attribute name="title" value="availability" parse="true" />
											</tooltip>
										</cell>
									</cell>
									<cell type="text" value="availability" class="left" invert-condition="availability-link" />
								</loop>
							</table>
						</div>
					</tab>
					<tab label="APPS.LIST_OTHERS" condition="extensions.others.length">
						<div class="span12">
							<table>
								<head>
									<cell label="EX.HEADER_NAME" type="text" class="left" />
									<cell label="EX.HEADER_TYPE" type="text" class="center" />
									<cell label="EXTENSIONS.HEADER_VERSION" type="text" class="center" />
									<cell label="EXTENSIONS.HEADER_ENABLED" class="center" />
									<cell />
									<cell label="EXTENSIONS.HEADER_AUTHOR" type="text" class="center" />
									<cell label="EXTENSIONS.HEADER_LICENSE" type="text" class="center" />
									<cell label="EXTENSIONS.HEADER_AVAILABILITY" type="text" class="left" />
								</head>
								<loop subject="extensions.others">
									<cell class="left" >
										<cell>
											<tooltip>
												<attribute name="content" value="description" parse="true" />
												<attribute name="href" value="description-url" parse="true" />
												<attribute name="title" value="name" parse="true" />
											</tooltip>
										</cell>
									</cell>
									<cell type="text" value="type" class="center" />
									<cell type="text" value="version" class="center" />
									<cell type="ticker" value="installed" class="center" icons="{'-1':'check-empty','-2':'check','-3':'flag'}" status-text="{'-1':'EX.BRWOSE_NOT_INSTALLED_EXPL', '-2':'EX.BRWOSE_INSTALLED_EXPL', '-3':'EX.BRWOSE_INSTALLED_UPD_EXPL' }" />
