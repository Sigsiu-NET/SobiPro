							</table>
						</div>
					</tab>
				</tabs>
			</div>
		</div>
	</body>
	<config>
		<action value="index.php?option=com_sobipro" />
		<hidden>
			<field name="option" default="com_sobipro" />
			<field name="task" default="" />
			<field name="pid" value="pid" />
			<field name="method" default="xhr" />
		</hidden>
	</config>
</definition>
