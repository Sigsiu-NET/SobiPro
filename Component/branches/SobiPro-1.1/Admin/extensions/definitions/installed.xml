<?xml version="1.0" encoding="utf-8"?>
<definition>
	<header>
		<title value="EX.INSTALLED" />
		<file type="script" filename="bootstrap.tooltips" />
		<file type="script" filename="adm.sam" />
	</header>
	<toolbar title="var:[site_title]" icon="SobiApplicationSection">
		<button label="TB.REMOVE" task="extensions.delete" icon="trash" />
		<divider />
		<buttons type="options" dropdown-class="pull-right">
			<button type="url" task="panel" />
			<button type="url" task="config" />
			<button type="url" task="acl" />
            <button type="url" task="template.info" />
			<button type="help" target="_blank" />
		</buttons>
	</toolbar>
	<body>
		<div class="row-fluid">
			<div class="span2" id="SPRightMenu">
				<menu />
			</div>
			<div class="span10">
				<message id="spMessage" />
				<div>
					<field type="fileUpload" name="SobiProExtension"  label="EX.INSTALL" accept="application/zip" task="extensions.install"/>
				</div>
				<table>
					<head>
						<cell />
						<cell label="EX.HEADER_NAME" type="text" class="SpCellLeft" />
                        <cell label="EXTENSIONS.HEADER_VERSION" type="text" class="SpCellCenter" />
						<cell label="EX.HEADER_TYPE" type="text" class="SpCellCenter" />
						<cell label="EXTENSIONS.HEADER_ENABLED" type="text" class="SpCellCenter" />
						<cell label="EXTENSIONS.HEADER_PID" type="text" class="SpCellCenter" />
						<cell label="EXTENSIONS.HEADER_AUTHOR" type="text" class="SpCellCenter" />
					</head>
					<loop subject="applications">
						<cell type="checkbox" name="eid" value="eid" class="SpCellCenter" locked="locked" locked-text="EX.CORE_PLUGIN" input-type="radio" multiple="false"/>
						<cell type="text" value="name" class="SpCellLeft" />
                        <cell type="text" value="version" class="SpCellCenter" />
						<cell type="text" value="type" class="SpCellCenter" />
						<cell type="ticker" value="enabled" class="SpCellCenter" icons="{'0':'remove-sign','1':'ok', '-1':'lock'}" status-text="{'-1':'EX.NOT_APPLICABLE'}">
							<url type="intern">
								<param name="task" value="extensions.toggle" />
								<param name="eid" value="eid" parse="true" />
							</url>
						</cell>
						<cell type="text" value="pid" class="SpCellCenter" />
						<cell type="link" value="author" condition="authorURL" class="SpCellCenter" >
							<url type="extern" host="authorURL" />
						</cell>
						<cell type="text" value="author" class="SpCellCenter" invert-condition="authorURL" />
					</loop>
				</table>
			</div>
		</div>
	</body>
	<config>
		<action value="index.php?option=com_sobipro" />
		<hidden>
			<field name="option" default="com_sobipro" />
			<field name="task" default="" />
			<field name="pid" value="pid" />
			<field name="method" default="xhr" />
		</hidden>
	</config>
</definition>
