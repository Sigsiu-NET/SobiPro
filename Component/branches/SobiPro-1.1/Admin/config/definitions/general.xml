<?xml version="1.0" encoding="utf-8"?>
<definition>
	<header>
		<title value="SEC.CFG.CONFIGURATION_OF_SECTION" />
		<file type="script" filename="bootstrap.tabs" />
	</header>
	<toolbar title="var:[site_title]" icon="SobiSectionCfg">
		<button type="apply" task="config.save" />
		<divider />
		<button task="config.clean" ico="refresh" label="TB.CLEAN_CACHE" />
		<divider />
		<button type="help" target="_blank" />
	</toolbar>
	<body>
		<message id="spMessage" />
		<tabs>
			<tab label="SECN.CFG.SECTION_CONFIGURATION">
				<div class="row-fluid">
					<div class="span12">
						<fieldset>
                            <field type="states" name="section.state" value="section.state" label="ENABLED" prefix="yes_no" />
							<field type="text" name="section.name" value="section.name" label="SECN.CFG.SECTION_NAME" class="input-xlarge" />
							<field type="text" name="section.nid" value="section.nid" readonly="readonly" label="SECN.ADD_SECTION_ALIAS" class="input-xlarge" />
							<field type="textarea" name="section.description" value="section.description" editor="true" label="SECN.CFG.SECTION_DESCRIPTION" />
                        </fieldset>
                        <fieldset label="SECN.CFG.PUBLISHING">
							<field type="datePicker" label="CREATED_AT" name="section.createdTime" value="section.createdTime" class="span2" dateFormat="d-m-Y H:i:s" icon="edit" />
							<field type="datePicker" label="VALID_SINCE" name="section.validSince" value="section.validSince" class="span2" dateFormat="d-m-Y H:i:s" icon="unlock" />
							<field type="datePicker" label="VALID_UNTIL" name="section.validUntil" value="section.validUntil" class="span2" dateFormat="d-m-Y H:i:s" icon="lock" />
						</fieldset>
                        <fieldset label="META_DATA">
                            <field type="states" name="spcfg[meta.always_add_section]" value="meta.always_add_section" label="SECN.CFG.ADD_SECTION_META_DATA" prefix="yes_no" />
                            <field type="textarea" name="section.metaDesc" value="section.metaDesc" label="DESCRIPTION" editor="false" class="input-splarge" rows="2" style="" />
                            <field type="textarea" name="section.metaKeys" value="section.metaKeys" label="KEYS" editor="false" class="input-splarge" rows="2" style="" />
                            <field type="text" name="section.metaAuthor" value="section.metaAuthor" label="AUTHOR" class="input-large" maxlength="255" />
                            <field type="select" label="ROBOTS" name="section.metaRobots" selected="category.metaRobots" class="input-large">
                                <values>
                                    <option value="" label="ROBOTS_NONE" />
                                    <option value="index, follow" label="index, follow" />
                                    <option value="index, nofollow" label="index, nofollow" />
                                    <option value="noindex, follow" label="noindex, follow" />
                                    <option value="noindex, nofollow" label="noindex, nofollow" />
                                </values>
                            </field>
                        </fieldset>
					</div>
				</div>
			</tab>

			<tab label="SECN.CFG.TEMPLATE_DATA">
				<div class="row-fluid">
					<div class="span12">
                        <fieldset>
                            <field type="select" label="SEC.CFG.SECTION_TEMPLATE" name="spcfg[section.template]" selected="section.template" values="templatesList" class="input-large" />
                            <field type="states" name="spcfg[general.top_menu]" value="general.top_menu" label="SEC.CFG.SHOW_TOP_MENU" prefix="yes_no" />
                            <field type="states" name="spcfg[general.parse_template_content]" value="general.parse_template_content" label="SEC.CFG.PARSE_TPL_CONTENT" prefix="yes_no" />
                        </fieldset>
                        <div style="margin-top:40px;"></div>
						<tabs>
							<tab label="SECN.CFG.CLISTING_SETTINGS">
                                <fieldset label="SEC.CFG.CATEGORY_SETTINGS">
                                    <field type="states" name="spcfg[category.show_icon]" value="category.show_icon" label="SECN.CFG.SHOW_CATEGORY_ICONS" prefix="show" />
                                    <field type="states" name="spcfg[category.show_intro]" value="category.show_intro" label="SECN.CFG.SHOW_CATEGORY_INTROTEXT" prefix="show" />
                                    <field type="states" name="spcfg[category.show_desc]" value="category.show_desc" label="SECN.CFG.SHOW_CATEGORY_DESC" prefix="show" />
                                    <field type="states" name="spcfg[category.parse_desc]" value="category.parse_desc" label="SECN.CFG.PARSE_CATEGORY_DESC" prefix="yes_no" />
                                </fieldset>
								<fieldset>
									<field type="select" label="SEC.CFG.NUMBER_CATS_LINE" name="spcfg[list.categories_in_line]" selected="list.categories_in_line" class="input-small">
										<values>
											<option value="1" />
											<option value="2" />
											<option value="3" />
											<option value="4" />
											<option value="5" />
										</values>
									</field>
									<field type="select" label="SECN.CFG.ORDER_CATEGORIES_BY" name="spcfg[list.categories_ordering]" selected="list.categories_ordering" class="input-large">
										<values>
											<option value="name.asc" label="ORDER_BY_NAME_ASCENDING" />
											<option value="name.desc" label="ORDER_BY_NAME_DESCENDING" />
											<option value="position.asc" label="ORDER_BY_POSITION_ASCENDING" />
											<option value="position.desc" label="ORDER_BY_POSITION_DESCENDING" />
											<option value="counter.asc" label="ORDER_BY_COUNT_ASCENDING" />
											<option value="counter.desc" label="ORDER_BY_COUNT_DESCENDING" />
											<option value="createdTime.desc" label="ORDER_BY_CREATION_DATE_ASC" />
											<option value="createdTime.desc" label="ORDER_BY_CREATION_DATE_DESC" />
											<option value="updatedTime.asc" label="ORDER_BY_UPDATE_DATE_ASC" />
											<option value="updatedTime.desc" label="ORDER_BY_UPDATE_DATE_DESC" />
											<option value="validUntil.asc" label="ORDER_BY_EXPIRATION_DATE_ASC" />
											<option value="validUntil.desc" label="ORDER_BY_EXPIRATION_DATE_DESC" />
										</values>
									</field>
									<field type="states" name="spcfg[list.cat_desc]" value="list.cat_desc" label="SECN.CFG.PASS_CAT_DESC_TO_TEMPLATE" prefix="yes_no" />
									<field type="states" name="spcfg[list.cat_meta]" value="list.cat_meta" label="SECN.CFG.PASS_CAT_DATA_TO_TEMPLATE" prefix="yes_no" />
									<field type="states" name="spcfg[list.subcats]" value="list.subcats" label="SEC.CFG.PASS_SUBCATS_TO_TEMPLATE" prefix="yes_no" />
									<field type="select" label="SEC.CFG.NUMBER_CATS_LINE" name="spcfg[list.num_subcats]" selected="list.num_subcats" class="input-small">
										<values>
											<option value="1" />
											<option value="2" />
											<option value="3" />
											<option value="4" />
											<option value="5" />
											<option value="6" />
											<option value="7" />
											<option value="8" />
											<option value="9" />
											<option value="10" />
										</values>
									</field>
								</fieldset>
							</tab>
							<tab label="SECN.CFG.ELISTING_SETTINGS">
                                <fieldset label="SECN.CFG.ENTRY_SETTINGS">
                                    <field type="select" label="SECN.CFG.ENTRY_TITLE_FIELD" name="entry.name_field" selected="entry.name_field" values="nameFields" class="input-large" />
                                    <field type="text" name="spcfg[entry.publish_limit]" value="entry.publish_limit" label="SECN.CFG.STOP_PUBLISHING_ENTRY_AFTER" class="input-mini">
                                        <add where="after">
                                            <call function="Sobi::Txt">
                                                <param>DAYS</param>
                                            </call>
                                        </add>
                                    </field>
                                </fieldset>
								<fieldset>
									<field type="select" label="SECN.CFG.ORDER_ENTRIES_BY" name="spcfg[list.entries_ordering]" selected="list.entries_ordering" values="entriesOrdering" class="input-large" />
									<field type="select" label="SEC.CFG.NUMBER_ENTRIES_PAGE" name="spcfg[list.entries_limit]" selected="list.entries_limit" class="input-small">
										<values>
											<option value="1" />
											<option value="2" />
											<option value="3" />
											<option value="4" />
											<option value="5" />
											<option value="6" />
											<option value="7" />
											<option value="8" />
											<option value="9" />
											<option value="10" />
											<option value="11" />
											<option value="12" />
											<option value="13" />
											<option value="14" />
											<option value="15" />
										</values>
									</field>
									<field type="select" label="SEC.CFG.NUMBER_ENTRIES_LINE" name="spcfg[list.entries_in_line]" selected="list.entries_in_line" class="input-small">
										<values>
											<option value="1" />
											<option value="2" />
											<option value="3" />
											<option value="4" />
											<option value="5" />
										</values>
									</field>
									<field type="states" name="spcfg[list.entry_meta]" value="list.entry_meta" label="SECN.CFG.PASS_ENTRY_META_TEMPLATE" prefix="yes_no" />
									<field type="states" name="spcfg[list.entry_cats]" value="list.entry_cats" label="SEC.CFG.PASS_SEL_CATS_OF_ENTRY_TO_TEMPLATE" prefix="yes_no" />
								</fieldset>
							</tab>
							<tab label="SEC.CFG.ALPHAMENU_SETTINGS">
								<fieldset>
									<field type="states" name="spcfg[alphamenu.show]" value="alphamenu.show" label="SEC.CFG.SHOW_ALPHA_MENU" prefix="yes_no" />
									<field type="text" name="spcfg[alphamenu.letters]" value="alphamenu.letters" label="SEC.CFG.ALPHA_LETTERS" class="input-xlarge" />
									<field type="states" name="spcfg[alphamenu.verify]" value="alphamenu.verify" label="SEC.CFG.SHOW_ALPHA_VERIFY" prefix="yes_no" />
									<field type="select" label="SEC.CFG.ALPHA_FIELD" name="spcfg[alphamenu.primary_field]" selected="alphamenu.primary_field" values="alphaMenuFields" class="input-large" />
									<field type="select" label="SEC.CFG.ALPHA_FIELDS" multiple="true" size="7" name="spcfg[alphamenu.extra_fields_array]" selected="alphamenu.extra_fields_array" values="alphaMenuFields" class="input-large" />
								</fieldset>
							</tab>
						</tabs>
                        <div class="alert"><text value="CAT.JS_SELECT_CAT_ICON" /></div>
					</div>
				</div>
			</tab>
			<tab label="SEC.CFG.REDIRECTS">
				<div class="row-fluid">
					<div class="span12">
                        <fieldset label="SEC.CFG.REDIRECTS_ENTRY_SPACER">
                            <field type="select" label="SEC.CFG.REDIRECTS_DO" name="spcfg[redirects.entry_enabled]" selected="redirects.entry_enabled" class="input-large">
                                <values>
                                    <option value="0" label="SEC.CFG.REDIRECTS_ERR_OPT" />
                                    <option value="1" label="SEC.CFG.REDIRECTS_RED_OPT" />
                                </values>
                            </field>
                            <field type="text" name="spcfg[redirects.entry_url]" value="redirects.entry_url" label="SEC.CFG.REDIRECTS_TO" class="input-xlarge" />
                            <field type="select" label="SEC.CFG.REDIRECTS_MSG_TYPE" name="spcfg[redirects.entry_msgtype]" selected="redirects.entry_msgtype" class="input-large">
                                <values>
                                    <option value="none" label="SEC.CFG.REDIRECTS_MSGTYPE_NONE_OPT" />
                                    <option value="error" label="SEC.CFG.REDIRECTS_MSGTYPE_ERR_OPT" />
                                    <option value="error" label="SEC.CFG.REDIRECTS_MSGTYPE_MSG_OPT" />
                                </values>
                            </field>
                            <field type="text" name="spcfg[redirects.entry_msg]" value="redirects.entry_msg" label="SEC.CFG.REDIRECTS_MSG" class="input-xlarge" />
                        </fieldset>
                        <fieldset label="SEC.CFG.REDIRECTS_CAT_SPACER">
                            <field type="select" label="SEC.CFG.REDIRECTS_DO" name="spcfg[redirects.category_enabled]" selected="redirects.category_enabled" class="input-large">
                                <values>
                                    <option value="0" label="SEC.CFG.REDIRECTS_ERR_OPT" />
                                    <option value="1" label="SEC.CFG.REDIRECTS_RED_OPT" />
                                </values>
                            </field>
                            <field type="text" name="spcfg[redirects.category_url]" value="redirects.category_url" label="SEC.CFG.REDIRECTS_TO" class="input-xlarge" />
                            <field type="select" label="SEC.CFG.REDIRECTS_MSG_TYPE" name="spcfg[redirects.category_msgtype]" selected="redirects.category_msgtype" class="input-large">
                                <values>
                                    <option value="none" label="SEC.CFG.REDIRECTS_MSGTYPE_NONE_OPT" />
                                    <option value="error" label="SEC.CFG.REDIRECTS_MSGTYPE_ERR_OPT" />
                                    <option value="error" label="SEC.CFG.REDIRECTS_MSGTYPE_MSG_OPT" />
                                </values>
                            </field>
                            <field type="text" name="spcfg[redirects.category_msg]" value="redirects.category_msg" label="SEC.CFG.REDIRECTS_MSG" class="input-xlarge" />
                        </fieldset>
                        <fieldset label="SEC.CFG.REDIRECTS_SECTION_SPACER">
                            <field type="select" label="SEC.CFG.REDIRECTS_DO" name="spcfg[redirects.section_enabled]" selected="redirects.section_enabled" class="input-large">
                                <values>
                                    <option value="0" label="SEC.CFG.REDIRECTS_ERR_OPT" />
                                    <option value="1" label="SEC.CFG.REDIRECTS_RED_OPT" />
                                </values>
                            </field>
                            <field type="text" name="spcfg[redirects.section_url]" value="redirects.section_url" label="SEC.CFG.REDIRECTS_TO" class="input-xlarge" />
                            <field type="select" label="SEC.CFG.REDIRECTS_MSG_TYPE" name="spcfg[redirects.section_msgtype]" selected="redirects.section_msgtype" class="input-large">
                                <values>
                                    <option value="none" label="SEC.CFG.REDIRECTS_MSGTYPE_NONE_OPT" />
                                    <option value="error" label="SEC.CFG.REDIRECTS_MSGTYPE_ERR_OPT" />
                                    <option value="error" label="SEC.CFG.REDIRECTS_MSGTYPE_MSG_OPT" />
                                </values>
                            </field>
                            <field type="text" name="spcfg[redirects.section_msg]" value="redirects.section_msg" label="SEC.CFG.REDIRECTS_MSG" class="input-xlarge" />
                        </fieldset>
					</div>
				</div>
			</tab>
			<tab label="SECN.CFG.SECURITY_SETTINGS">
				<div class="row-fluid">
					<div class="span12">
                        <fieldset>
                            <field type="textarea" name="spcfg[html.allowed_tags_array]" value="html.allowed_tags_array" label="SEC.CFG.ALLOWED_TAGS" editor="false" class="input-splarge" rows="2" style="" />
                            <field type="textarea" name="spcfg[section.metaKeys]" value="html.allowed_attributes_array" label="SEC.CFG.ALLOWED_ATTRIBUTES" editor="false" class="input-splarge" rows="2" style="" />
                        </fieldset>
					</div>
				</div>
			</tab>
		</tabs>
	</body>
	<config>
		<action value="index.php?option=com_sobipro" />
		<hidden>
			<field name="option" default="com_sobipro" />
			<field name="task" default="" />
			<field name="method" default="xhr" />
		</hidden>
	</config>
</definition>
