<?xml version="1.0" encoding="utf-8"?>
<definition>
	<header>
		<title value="TP.INFO_SITE_TITLE" />
		<file type="script" filename="bootstrap.tabs" />
		<file type="script" filename="adm.template" />
	</header>
	<toolbar title="var:[site_title]" icon="SobiTemplate">
		<button type="duplicate" task="template.clone" label="TB.CLONE"/>
        <divider />
		<button type="delete" task="template.delete" />
		<divider />
		<buttons type="options" dropdown-class="pull-right">
			<button type="url" task="panel" />
			<button type="url" task="config" />
			<button type="url" task="acl" />
			<button type="url" task="extensions" />
			<button type="help" target="_blank" />
		</buttons>
	</toolbar>
	<body>
		<message id="spMessage" />
		<tabs>
			<tab label="TP.INFO">
				<div class="row-fluid">
					<div class="span6">
						<fieldset>
							<field type="output" value="template.name" label="TP.TEMPLATE_NAME" />
							<field type="output" value="template.author.url" label="TP.AUTHOR_URL" condition="template.author.url">
								<value>
									<url type="external" target="_blank" content="template.author.name" uri="template.author.url" />
								</value>
							</field>
							<field type="output" value="template.author.name" label="TP.AUTHOR" invert-condition="template.author.url" />
							<field type="output" value="template.copyright" label="TP.COPYRIGHT" />
							<field type="output" value="template.license" label="TP.LICENSE" />
							<field type="output" value="template.version" label="TP.VER" />
							<field type="output" value="template.date" label="TP.DATE" />
							<field type="output" value="template.description" label="TP.DESCRIPTION" />
						</fieldset>
					</div>
					<div class="span6" condition="template.preview">
						<img src="var:[template.preview]" alt=""/>
					</div>
				</div>
			</tab>
			<tab label="TP.FILES_DECS" condition="files.length">
				<div class="row-fluid">
					<div class="span12">
						<table>
							<head>
								<cell label="TP.HEAD_FILENAME" type="text" class="center" />
								<cell label="TP.HEAD_FILE_DESC" type="text" class="center" />
							</head>
							<loop subject="files">
								<cell type="link" value="file">
									<url type="intern">
										<param name="task" value="template.edit" />
										<param name="file" value="filepath" parse="true" />
										<param name="sid" value="sid" parse="true" subject="skip"/>
									</url>
								</cell>
								<cell type="text" value="description" class="left" />
							</loop>
						</table>
					</div>
				</div>
			</tab>
		</tabs>
	</body>
	<config>
		<action value="index.php?option=com_sobipro" />
		<hidden>
			<field name="option" default="com_sobipro" />
			<field name="task" default="" />
			<field name="templateNewName" default="" />
		</hidden>
	</config>
</definition>
