<?xml version="1.0" encoding="utf-8"?>
<definition>
	<header>
		<title value="CATEGORY_LIST_TITLE" />
		<file type="script" filename="bootstrap.tooltips" />
	</header>
	<toolbar title="var:[site_title]" icon="SobiSection">
		<buttons type="entry">
			<button type="new" task="entry.add" label="AMN.ADD" ico="plus" />
			<button type="delete" task="entry.delete" />
			<nav-header label="TB.PUBLISHING" />
			<button type="publish" task="entry.publish" />
			<button type="hide" task="entry.hide" />
			<nav-header label="TB.APPROVAL" />
			<button type="approve" task="entry.approve" />
			<button type="revoke" task="entry.unapprove" />
		</buttons>
		<divider />
		<buttons type="category">
			<button type="new" task="category.add" label="AMN.ADD" ico="plus" />
			<button type="delete" task="category.delete" />
			<nav-header label="TB.PUBLISHING" />
			<button type="publish" task="category.publish" />
			<button type="hide" task="category.hide" />
			<nav-header label="TB.APPROVAL" />
			<button type="approve" task="category.approve" />
			<button type="revoke" task="category.unapprove" />
		</buttons>
		<divider />
		<buttons type="options" dropdown-class="pull-right">
			<button type="url" task="panel" />
			<button type="url" task="config" />
			<button type="url" task="acl" />
			<button type="url" task="extensions" />
			<button type="help" target="_blank" />
		</buttons>
	</toolbar>

	<body>
		<message id="spMessage" />
		<header label="CAT.CATEGORY_LIST_HEAD" icon="SobiCatList">
			<div class="btn-group pull-right" id="spCategoriesFilterHead">
				<field type="select" name="corder" selected="corder" class="input-large spOrdering">
					<values>
						<values label="EMN_ORDER_BY" />
						<option value="name.asc" label="CATN.ORDER_BY_NAME_ASC" />
						<option value="name.desc" label="CATN.ORDER_BY_NAME_DESC" />
						<option value="state.asc" label="CATN.ORDER_BY_STATE_ASC" />
						<option value="state.desc" label="CATN.ORDER_BY_STATE_DESC" />
						<option value="approved.asc" label="CATN.ORDER_BY_APPR_ASC" />
						<option value="approved.desc" label="CATN.ORDER_BY_APPR_DESC" />
						<option value="order.asc" label="CATN.ORDER_BY_ORDER_ASC" />
						<option value="order.desc" label="CATN.ORDER_BY_ORDER_DESC" />
						<option value="owner.desc" label="CATN.ORDER_BY_OWNER" />
					</values>
				</field>
				<field type="select" name="climit" selected="categories-limit" class="input-mini spOrdering">
					<values>
						<values label="LISTING_LIMIT" />
						<option value="2" />
						<option value="5" />
						<option value="15" />
						<option value="25" />
						<option value="50" />
						<option value="100" />
					</values>
				</field>
			</div>
		</header>
		<table>
			<head>
				<cell label="HEADER_ID" type="text" class="center" />
				<cell type="checkbox" rel="c_sid" class="center" />
				<cell label="HEADER_CATS_NAME" type="text" />
				<cell label="HEADER_CATS_STATE" type="text" class="center" />
				<cell label="HEADER_CATS_APPROVAL" type="text" class="center" />
				<cell label="HEADER_CATS_AUTHOR" type="text" class="center" />
				<cell label="HEADER_CATS_POSITION" type="ordering" class="center" rel="category" />
			</head>
			<loop subject="categories">
				<cell type="text" value="id" class="center" />
				<cell type="checkbox" name="c_sid" value="id" class="center" checked-out-time="coutTime" checked-out-by="cout" checked-out-ico="lock" />
				<cell>
					<cell type="link" value="name">
						<url type="intern">
							<param name="task" value="category.edit" />
							<param name="sid" value="id" parse="true" />
						</url>
					</cell>
				</cell>
				<cell type="ticker" value="state" class="center" icons="{'0':'remove-sign','enabled':'ok'}" valid-since="validSince" valid-until="validUntil">
					<url type="intern">
						<param name="task" value="category.toggle.enabled" />
						<param name="sid" value="id" parse="true" />
					</url>
				</cell>
				<cell type="ticker" value="approved" class="center" icons="{'0':'thumbs-down','1':'thumbs-up'}">
					<url type="intern">
						<param name="task" value="category.toggle.approval" />
						<param name="sid" value="id" parse="true" />
					</url>
				</cell>
				<cell type="text" value="owner" class="center" />
				<cell type="ordering" value="position" name="cp_sid[var:[id]]" class="center" />
			</loop>
			<foot>
				<navigation />
			</foot>
		</table>
		<pagination set="cSite" class="pagination pagination-centered pagination-toolbar" inputbox="right" type="ICON">
			<param name="count" value="categories-count" parse="true" />
			<param name="limit" value="categories-limit" parse="true" />
			<param name="current" value="categories-site" parse="true" />
			<param name="url">
				<param name="option" value="com_sobipro" />
				<param name="sid" value="request.sid" parse="true" />
			</param>
		</pagination>

		<div style="padding-top:30px;" />
		<header label="CAT.ENTRIES_LIST_HEAD" icon="SobiEntries" condition="entries.lenght">
			<div class="btn-group pull-right" id="spEntriesFilterHead">
				<field type="text" name="sp_entries_filter" id="spEntriesFilter" value="filter" placeholder="FILTER" class="input-large spSubmit" />
				<field type="select" name="eorder" selected="eorder" values="entriesOrdering" class="input-large spOrdering" />
				<field type="select" name="elimit" selected="entries-limit" class="input-mini spOrdering">
					<values>
						<values label="LISTING_LIMIT" />
						<option value="5" />
						<option value="15" />
						<option value="25" />
						<option value="50" />
						<option value="100" />
					</values>
				</field>
			</div>
		</header>
		<table>
			<head>
				<cell label="HEADER_ID" type="text" class="center" />
				<cell type="checkbox" rel="e_sid" class="center" />
				<cell label="HEADER_ENTRIES_NAME" type="text" />
				<cells value="customHeader" class="center" type="text" />
				<cell label="HEADER_ENTRIES_STATE" type="text" class="center" />
				<cell label="HEADER_ENTRIES_APPROVAL" type="text" class="center" />
				<cell label="HEADER_FIELD_AUTHOR" type="text" class="center" />
				<cell label="HEADER_FIELD_POSITION" type="ordering" class="center" rel="entry" />
			</head>
			<loop subject="entries">
				<cell type="text" value="id" class="center" />
				<cell type="checkbox" name="e_sid" value="id" class="center" />
				<cell>
					<cell type="link" value="name" class="var:[valid]">
						<url type="intern">
							<param name="task" value="entry.edit" />
							<param name="sid" value="id" parse="true" />
							<param name="pid" value="request.sid" parse="true" subject="skip" />
						</url>
					</cell>
				</cell>
				<cells value="customFields" class="center" />
				<cell type="ticker" value="state" class="center" icons="{'0':'remove-sign','1':'ok'}" valid-since="validSince" valid-until="validUntil">
					<url type="intern">
						<param name="task" value="entry.toggle.enabled" />
						<param name="sid" value="id" parse="true" />
					</url>
				</cell>
				<cell type="ticker" value="approved" class="center" icons="{'0':'thumbs-down','1':'thumbs-up'}">
					<url type="intern">
						<param name="task" value="entry.toggle.approval" />
						<param name="sid" value="id" parse="true" />
					</url>
				</cell>
				<cell type="text" value="owner" class="center" />
				<cell type="ordering" value="position" name="ep_sid[var:[id]]" class="center" />
			</loop>
			<foot>
				<navigation />
			</foot>
		</table>
		<pagination set="eSite" class="pagination pagination-centered pagination-toolbar" inputbox="right" type="ICON">
			<param name="count" value="entries-count" parse="true" />
			<param name="limit" value="entries-limit" parse="true" />
			<param name="current" value="entries-site" parse="true" />
			<param name="url">
				<param name="option" value="com_sobipro" />
				<param name="sid" value="request.sid" parse="true" />
			</param>
		</pagination>
	</body>
	<config>
		<action value="index.php?option=com_sobipro" />
		<hidden>
			<field name="option" default="com_sobipro" />
			<field name="task" default="" />
			<field name="sid" default="" />
		</hidden>
	</config>
</definition>
