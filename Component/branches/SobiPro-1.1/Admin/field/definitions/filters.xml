<?xml version="1.0" encoding="utf-8"?>
<definition>
	<header>
		<title value="FLR.SITE_TITLE" />
	</header>
	<toolbar title="FLR.SITE_TITLE" icon="SobiFields">
		<button type="new" class="filter-edit" />
		<divider />
		<button type="help" target="_blank" />
	</toolbar>
	<body>
		<message id="spMessage" />
		<table>
			<head>
				<cell label="FLR.FILTER_ID" type="text" />
				<cell label="FLR.FILTER_NAME" type="text" />
				<cell label="FLR.FILTER_MSG" type="text" />
				<cell label="FLR.FILTER_REGEX" type="text" />
				<cell label="FLR.EDIT_FILTER" type="text" class="center"/>
			</head>
			<loop subject="filters">
				<cell type="text" value="id" class="filterId"/>
				<cell type="text" value="name"/>
				<cell type="text" value="message" />
				<cell type="text" value="regex" />
				<cell type="text" class="center">
					<button type="new" class="filter-edit" ico="cog" rel="var:[id]" />
				</cell>
			</loop>
		</table>
		<field type="modalWindow" id="filter-edit-window" style="100px"/>
	</body>
	<config>
		<action value="index.php?option=com_sobipro" />
		<hidden>
			<field name="option" const="com_sobipro" />
			<field name="task" default="" />
		</hidden>
	</config>
</definition>
